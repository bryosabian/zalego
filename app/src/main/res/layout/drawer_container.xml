<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sabian="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_SabianDrawerContainer"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:background="@color/sabian_actionbar_text_color"
    android:orientation="vertical"

    >

    <!--MainContent-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingBottom="8dp"
                    >

                    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        sabian:bct_image="@drawable/ic_person_outline_black_48dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/bct_CycleUserImage"

                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="16dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/sabian_actionbar_text_color"
                            android:text="Hello There"
                            android:textStyle="bold"
                            android:id="@+id/txt_UserNames"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:layout_marginTop="5dp"
                            android:text="You are on Zalego"
                            android:textColor="@color/sabian_actionbar_text_color"
                            android:id="@+id/txt_Description"
                            />
                    </LinearLayout>




                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"

                    >
                    <com.sabiantools.controls.SabianFitImage
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/sfi_CycleUserEdit"
                        />
                </LinearLayout>


            </RelativeLayout>

        </FrameLayout>

    </LinearLayout>
    <!--EndMainContent-->

</LinearLayout><!--EndDrawer-->
