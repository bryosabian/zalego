<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sabian="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!--Header-->
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="52dp"
    android:id="@+id/ll_SabianDrawerItem1"
    android:background="@color/sabian_theme_background"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="12dp"
        >
        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sabian:fa_icon="fa-home"
            android:textColor="@color/sabian_actionbar_text_color"
            android:textSize="16sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/sabian_actionbar_text_color"
            android:textSize="16sp"
            android:layout_marginLeft="7dp"
            />

    </LinearLayout>
</LinearLayout>
    <!--EndHeader-->

    <!--MainContent-->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:id="@+id/ll_SabianDrawerItems"
    >

<ListView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/lst_SabianDrawerItems"
    android:layout_below="@+id/txt_SabianDrawerItems"
    android:layout_marginTop="5dp"
    />

</LinearLayout>
    <!--EndMainContent-->

</LinearLayout>