<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/bbutton_transparent_white_pressed" />
            <stroke android:width="1dp" android:color="@color/bbutton_transparent_white_pressed_edge" />
        </shape>
    </item>

    <item android:top="1dp" android:right="1dp" android:left="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/bbutton_transparent_white"/>
            <corners android:radius="2dp"/>
            <stroke android:width="1dp" android:color="@color/bbutton_transparent_white_edge" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/bbutton_transparent_white_disabled" />
            <stroke android:width="1dp" android:color="@color/bbutton_transparent_white_disabled_edge" />
        </shape>
    </item>

</selector>